{
  "extends": ["../tsconfig.base.json", "@tsconfig/svelte/tsconfig.json"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "$lib/*": ["./src/lib/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"]
}
